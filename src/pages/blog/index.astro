---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog" description="Artigos sobre tecnologia, sistemas e desenvolvimento">
  <section class="py-12">
    <h1 class="font-heading text-4xl font-bold">Ãšltimos Artigos</h1>
    <p class="text-text-muted text-lg mt-2">Meus pensamentos sobre design, desenvolvimento e tecnologia.</p>

    <div class="mt-8">
      {posts.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          date={post.data.date}
          image={post.data.image}
          slug={post.id}
        />
      ))}
    </div>
  </section>
</Layout>
