---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<Layout
  title="Blog"
  description="Artigos sobre tecnologia, sistemas e desenvolvimento"
>
  <section class="section-shell pt-10 sm:pt-14" transition:name="blog-list">
    <div class="section-intro reveal">
      <p class="eyebrow">Arquivo</p>
      <h1
        class="page-title text-text-primary mt-2"
        transition:name="page-title"
      >
        Últimos artigos
      </h1>
      <p
        class="page-lead text-text-muted mt-3 content-measure reveal reveal-delay-1"
      >
        Pensamentos e mais pensamentos (placeholder)
      </p>
      <p class="meta-line mt-4 reveal reveal-delay-2">
        {posts.length} publicações
      </p>
    </div>
    <div class="mt-1">
      {
        posts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            image={post.data.image}
            slug={post.id}
            variant="row"
          />
        ))
      }
    </div>
  </section>
</Layout>
