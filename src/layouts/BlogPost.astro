---
import Layout from './Layout.astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  date: Date;
  image: ImageMetadata;
}

const { title, description, date, image } = Astro.props;

const formattedDate = date.toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={title} description={description}>
  <div class="max-w-[720px] mx-auto">
    <Image
      src={image}
      alt={title}
      width={1200}
      height={630}
      class="w-full rounded-lg"
    />
    <h1 class="font-heading text-3xl sm:text-4xl font-bold text-text-primary mt-8">
      {title}
    </h1>
    <p class="text-text-muted text-lg mt-2">
      {description}
    </p>
    <div class="flex items-center gap-2 text-text-muted text-sm mt-4">
      <span>Mateus</span>
      <span>&middot;</span>
      <time datetime={date.toISOString()}>{formattedDate}</time>
    </div>
    <hr class="border-border my-8" />
    <article class="prose max-w-[720px] mx-auto">
      <slot />
    </article>
  </div>
</Layout>
