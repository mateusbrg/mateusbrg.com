---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog" description="Artigos sobre tecnologia, sistemas e desenvolvimento">
  <section class="section-shell pt-10 sm:pt-14">
    <div class="section-intro">
      <p class="eyebrow">Arquivo</p>
      <h1 class="font-heading text-[var(--size-h1)] font-bold text-text-primary mt-2">Últimos artigos</h1>
      <p class="text-[var(--size-lead)] text-text-muted mt-3 content-measure">
        Pensamentos sobre design de sistemas, desenvolvimento e tecnologia aplicada a problemas reais.
      </p>
      <p class="meta-line mt-4">{posts.length} publicações</p>
    </div>
    <div class="mt-1">
      {posts.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          date={post.data.date}
          image={post.data.image}
          slug={post.id}
          variant="row"
        />
      ))}
    </div>
  </section>
</Layout>
